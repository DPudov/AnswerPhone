<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avaFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/ava_from" />

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/avaFrom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/ava_out"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/avaFrom"
        android:layout_toEndOf="@+id/avaFrom"
        android:contentDescription="@string/avatar"
        android:cropToPadding="false" />

    <TextView
        android:id="@+id/textLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/ava_out"
        android:layout_toEndOf="@+id/ava_out"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15sp"
        android:textColor="#616161" />


</RelativeLayout>