<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/intro_answerphone_head"
        android:id="@+id/intro_answerphone_textView"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:textSize="28sp"
        android:fontFamily="sans-serif" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView5"
        android:src="@drawable/ic_perm_phone_msg_black_24dp"
        android:layout_weight="0.47"
        android:paddingTop="20dp"
        android:contentDescription="@string/src" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/intro_answerphone_desc"
        android:id="@+id/intro_answerphone_desc_textView"
        android:paddingTop="20dp"
        android:textColor="#ffffff"
        android:textAlignment="center" />
</LinearLayout>