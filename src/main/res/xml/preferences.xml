<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/special">
        <SwitchPreference
            android:clickable="false"
            android:defaultValue="false"
            android:ellipsize="marquee"
            android:icon="@drawable/ic_notifications_black_24dp"
            android:key="push"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:title="@string/enable_push" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about_heading">
        <Preference
            android:icon="@drawable/ic_info_black_24dp"
            android:key="version"
            android:summary="@string/about_summary"
            android:title="@string/info" />
        <Preference
            android:icon="@drawable/ic_assignment_24dp"
            android:key="about"
            android:title="@string/my_site">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/my_site_url" />
        </Preference>
        <Preference
            android:icon="@drawable/ic_group_add_24dp"
            android:key="group"
            android:title="@string/group_in_vk">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/group_link" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>